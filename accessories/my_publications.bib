@Article{Panigada2014,
  author              = {C. Panigada and M. Rossini and M. Meroni and C. Cilia and L. Busetto and S. Amaducci and M. Boschetti and S. Cogliati and V. Picchi and F. Pinto and A. Marchesi and R. Colombo},
