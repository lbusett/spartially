@Article{Migliavacca2008,
  author              = {M. Migliavacca and E. Cremonese and R. Colombo and L. Busetto and M. Galvagno and L. Ganis and M. Meroni and E. Pari and M. Rossini and C. Siniscalco and U. Morra di Cella},
