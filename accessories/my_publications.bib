  journaltitle        = {International Journal of Applied Earth Observation and Geoinformation},
  keywords            = {climate conditions; cropping practice; MODIS; satellite data; simulation; sowing date; spatiotemporal analysis; time series analysis; vegetation index; wheat; winter, Bouches du Rhone; Camargue; France; Provence-Alpes-Cote d'Azur, Triticum aestivum; Triticum turgidum subsp. durum},
  publisher           = {Elsevier {BV}},
  source              = {Scopus},
  url                 = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-85040670989&doi=10.1016%2fj.jag.2017.01.001&partnerID=40&md5=84317ccb60e34455a7ac6dfbbb10e2cf},
}

